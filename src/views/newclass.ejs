                    <option class="newclass__horario--texto" value="01">01</option>
                    <option class="newclass__horario--texto" value="02">02</option>
                    <option class="newclass__horario--texto" value="03">03</option>
                    <option class="newclass__horario--texto" value="04">04</option>
                    <option class="newclass__horario--texto" value="05">05</option>
                    <option class="newclass__horario--texto" value="06">06</option>
                    <option class="newclass__horario--texto" value="07">07</option>
                    <option class="newclass__horario--texto" value="08">08</option>
                    <option class="newclass__horario--texto" value="09">09</option>
                    <option class="newclass__horario--texto" value="10">10</option>
                    <option class="newclass__horario--texto" value="11">11</option>
                    <option class="newclass__horario--texto" value="12">12</option>
                  </select>

                  <select class="newclass__horario--hora" name="minutos">
                    <option class="newclass__horario--texto" value="01">00</option>
                    <option class="newclass__horario--texto" value="02">05</option>
                    <option class="newclass__horario--texto" value="03">10</option>
                    <option class="newclass__horario--texto" value="04">15</option>
                    <option class="newclass__horario--texto" value="05">20</option>
                    <option class="newclass__horario--texto" value="06">25</option>
                    <option class="newclass__horario--texto" value="07">30</option>
                    <option class="newclass__horario--texto" value="08">35</option>
                    <option class="newclass__horario--texto" value="09">40</option>
                    <option class="newclass__horario--texto" value="10">45</option>
                    <option class="newclass__horario--texto" value="11">50</option>
                    <option class="newclass__horario--texto" value="12">55</option>
                  </select>

                  <select class="newclass__horario--hora" name="AMPM">
                    <option class="newclass__horario--texto" value="AM">AM</option>
                    <option class="newclass__horario--texto" value="PM">PM</option>
                  </select>

                </div>

                <a class="usuario__titulo">QUAL AULA YOGA VOCÊ VAI APLICAR?</a>
                <a class="usuario__titulo2">escolha para qual público será sua aula</a>

              </div class="newclass__about">

              <div class="newclass__images">

                <label class="newclass__legenda">
                  <div href="#"><img class="newclass__images--img" src="/images/iniciantes.svg" title="image1"
