                <label class="newclass__legenda">
                  <div href="#"><img class="newclass__images--img" src="/images/avancado.svg" title="image1"
                      alt="image1"></div>
                  <input TYPE="radio" name="category" value="AVANÇADO"> AVANÇADO
                </label>

              </div>

            </div>

            </div>

            <div class="newclass__button">
              <!-- <a class="newclass__button--text" href="#">CRIAR AULA</a> -->
              <button class="newclass__button--text" type="submit">CRIAR AULA</button>
            </div>

            </div>

            </div>

        </Section>
